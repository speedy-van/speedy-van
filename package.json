{
  "name": "speedy-van-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Enterprise-grade Speedy Van delivery platform monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:apps": "turbo run build --filter='./apps/*'",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --parallel",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "clean:cache": "turbo prune --docker",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prisma:migrate": "turbo run prisma:migrate",
    "prisma:push": "turbo run prisma:push",
    "prisma:studio": "turbo run prisma:studio",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@speedy-van/docs && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@jest/globals": "^30.1.1",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^30.1.1",
    "jest-environment-node": "^30.1.1",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
