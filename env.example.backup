# Speedy Van Environment Variables (Backup)
# Copy this file to .env.local and fill in your actual values

# Database
# ------------------------
DATABASE_URL="postgresql://username:password@localhost:5432/speedy_van"

# NextAuth.js
# ------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Authentication Providers
# ------------------------
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Email (Resend)
# ------------------------
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM=noreply@speedyvan.com

# Maps & Geocoding
# ------------------------
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_public_token_here

# Real-time Communication (Pusher)
# ------------------------
PUSHER_APP_ID=your_pusher_app_id_here
PUSHER_KEY=your_pusher_key_here
PUSHER_SECRET=your_pusher_secret_here
PUSHER_CLUSTER=your_pusher_cluster_here

# Weather API
# ------------------------
WEATHER_API_KEY=your_weather_api_key_here

# Analytics & Monitoring
# ------------------------
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Feature Flags
# ------------------------
NEXT_PUBLIC_FEATURE_FLAGS_ENABLED=true

# Security & Privacy
# ------------------------
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Driver Portal Features
# ------------------------
DRIVER_ONBOARDING_ENABLED=true
DRIVER_AVAILABILITY_ENABLED=true
DRIVER_NOTIFICATIONS_ENABLED=true
DRIVER_OFFLINE_MODE_ENABLED=true

# Job Management
# ------------------------
JOB_EXPIRY_MINUTES=30
JOB_CLAIM_TIMEOUT_MINUTES=5
DRIVER_LOCATION_UPDATE_INTERVAL=30

# Payments (Stripe)
# ------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Development & Testing
# ------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Performance & Caching
# ------------------------
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# External Services
# ------------------------
PLACES_API_KEY=your_places_api_key_here
SMS_API_KEY=your_sms_api_key_here
SMS_FROM_NUMBER=+1234567890
